{
  "name": "复制助手",
  "version": "1.7",
  "description": "复制助手",
  "browser_action": {
    "default_icon": "logo.gif"
  },
  "background_page": "background.html",
  "permissions": ["http://translate.google.cn/*","notifications","contextMenus"],
  "icons": {
	"16": "16.gif"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content_script.js"],
      "run_at": "document_start",
      "all_frames": true
    },{
      "matches": ["http://news.xinhuanet.com/*"],
      "css": ["xinhuanet.css"],
      "js": ["xinhuanet.js"],
      "run_at": "document_start",
      "all_frames": false
    },{
      "matches": ["http://www.chinanews.com/*"],
      "css": ["chinanews.css"],
      "all_frames": false
    }
  ]
}